<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dwise.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/logbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log out"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="-1dp" />

    <Button
        android:id="@+id/etabtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get ETA"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="98dp" />

    <Button
        android:id="@+id/stdinfobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Student Info"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/prtninfobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Parent Info"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="230dp" />

    <Button
        android:id="@+id/drvinfobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Driver Info"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="291dp" />

    <Button
        android:id="@+id/trackbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Bus"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="47dp" />

    <Button
        android:id="@+id/absencebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Absence Notification"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="355dp" />


    <TextView

        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Stop Buddy!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/etabtn" />

    <Button
        android:id="@+id/checkinbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Student Check-Ins"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="419dp" />

</android.support.constraint.ConstraintLayout>
