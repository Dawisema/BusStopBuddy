<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:background="@drawable/background_image"
    tools:context="csc383.busstopbuddy.AdminMenuActivity">



<Button
        android:id="@+id/routebtn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Bus Route"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="146dp"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:layout_marginTop="51dp" />

    <Button
        android:id="@+id/studentbtn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Student Info"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="205dp"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/parentbtn"
        android:layout_marginBottom="65dp" />

    <Button
        android:id="@+id/parentbtn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Parent Info"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="262dp"
        android:layout_below="@+id/routebtn"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp" />

    <Button
        android:id="@+id/driverbtn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Driver Info"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="317dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/parentbtn"
        android:layout_marginBottom="76dp" />

    <Button
        android:id="@+id/logbtn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/trackbtn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Tracking Bus"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="90dp"
        android:layout_below="@+id/emergencybtn"
        android:layout_toEndOf="@+id/logbtn" />

    <Button
        android:id="@+id/emergencybtn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Emergency Notifcation"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="375dp"
        android:layout_below="@+id/parentbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

    <Button
        android:id="@+id/textView7"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus Stop Buddy!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="3dp"
        tools:layout_editor_absoluteX="-4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
