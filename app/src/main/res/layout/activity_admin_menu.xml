<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="csc383.busstopbuddy.AdminMenuActivity">

    <Button
        android:id="@+id/trackBusButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:onClick="changeToBusTrack"
        android:text="Track Bus" />

    <Button
        android:text="Manage Buses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manageBusesButton"
        android:layout_marginLeft="182dp"
        android:layout_below="@+id/trackBusButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <Button
        android:id="@+id/viewStudentInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="182dp"
        android:text="View Student Info"
        android:layout_above="@+id/emergencyNotificationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />

    <Button
        android:text="View Parent Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/viewParentInfoButton"
        android:layout_marginLeft="182dp"
        android:layout_below="@+id/manageBusesButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <Button
        android:id="@+id/setDriverInfoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewParentInfoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="14dp"
        android:text="Set Driver Info"
        android:textAlignment="center" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Logout" />

    <Button
        android:id="@+id/emergencyNotificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Emergency Notification" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logoutButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/logoutButton"
        android:text="Bus Stop Buddy!"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="36sp" />

    <Button
        android:id="@+id/setStudentCheckinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/viewStudentInfoButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:text="Student Check-in" />

</RelativeLayout>
